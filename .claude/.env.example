# Claude DevOps Agents Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# MCP Server Configuration
# ============================================

# Browser Search API
BRAVE_API_KEY=your_brave_api_key_here

# Version Control APIs
GITLAB_TOKEN=your_gitlab_personal_access_token
GITLAB_API_URL=https://gitlab.com/api/v4
GITHUB_TOKEN=your_github_personal_access_token

# ============================================
# Cloud Provider Configuration
# ============================================

# AWS Configuration
AWS_PROFILE=default
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_SESSION_TOKEN=optional_session_token

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# Google Cloud Configuration
GCP_PROJECT_ID=your_project_id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json
GCP_REGION=us-central1

# ============================================
# Container Registries
# ============================================

# Docker Hub
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password

# AWS ECR
ECR_REGISTRY=123456789.dkr.ecr.us-east-1.amazonaws.com
ECR_REPOSITORY=your-repo-name

# Azure ACR
ACR_REGISTRY=yourregistry.azurecr.io
ACR_USERNAME=your_acr_username
ACR_PASSWORD=your_acr_password

# ============================================
# CI/CD Platforms
# ============================================

# GitLab CI
GITLAB_RUNNER_TOKEN=your_runner_registration_token
GITLAB_DEPLOY_TOKEN=your_deploy_token

# Jenkins
JENKINS_URL=https://jenkins.example.com
JENKINS_USER=your_jenkins_username
JENKINS_API_TOKEN=your_jenkins_api_token

# ============================================
# Kubernetes Configuration
# ============================================

# Kubernetes Context
KUBECONFIG=~/.kube/config
K8S_CONTEXT=production
K8S_NAMESPACE=default

# Helm Configuration
HELM_REPO_URL=https://charts.example.com
HELM_REPO_USERNAME=your_helm_username
HELM_REPO_PASSWORD=your_helm_password

# ============================================
# Security & Compliance
# ============================================

# Vault Configuration
VAULT_ADDR=https://vault.example.com:8200
VAULT_TOKEN=your_vault_token
VAULT_NAMESPACE=admin

# Security Scanning
SNYK_TOKEN=your_snyk_token
SONARQUBE_TOKEN=your_sonarqube_token
SONARQUBE_URL=https://sonarqube.example.com

# ============================================
# Monitoring & Observability
# ============================================

# Datadog
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# New Relic
NEW_RELIC_LICENSE_KEY=your_license_key
NEW_RELIC_API_KEY=your_api_key

# Prometheus/Grafana
PROMETHEUS_URL=http://prometheus.example.com:9090
GRAFANA_URL=http://grafana.example.com:3000
GRAFANA_API_KEY=your_grafana_api_key

# ============================================
# Infrastructure as Code
# ============================================

# Terraform Cloud
TF_CLOUD_TOKEN=your_terraform_cloud_token
TF_WORKSPACE=default
TF_STATE_BUCKET=terraform-state-bucket

# Ansible
ANSIBLE_VAULT_PASSWORD=your_vault_password
ANSIBLE_HOST_KEY_CHECKING=False

# ============================================
# Communication & Alerting
# ============================================

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_API_TOKEN=xoxb-your-token

# PagerDuty
PAGERDUTY_API_KEY=your_pagerduty_api_key
PAGERDUTY_INTEGRATION_KEY=your_integration_key

# ============================================
# Database Connections
# ============================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=myapp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# MongoDB
MONGODB_URI=mongodb://localhost:27017/myapp

# Redis
REDIS_URL=redis://localhost:6379

# ============================================
# Application Settings
# ============================================

# Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=info

# Feature Flags
FEATURE_FLAG_API_KEY=your_feature_flag_key

# ============================================
# Custom Settings
# ============================================

# Add your custom environment variables here